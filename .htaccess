PassengerNodejs /usr/bin/node
PassengerAppType node
PassengerStartupFile start-simple.js
PassengerAppRoot /var/www/vhosts/whatsappmotherfucker.karelgrunert.de/Whatsappbot

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Handle static files
  RewriteRule ^(public|assets|_next)/(.*) /$1/$2 [L]
  
  # Handle health check endpoint
  RewriteRule ^health$ /health [L]
  
  # For everything else, let Passenger handle it
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ / [L]
</IfModule> 